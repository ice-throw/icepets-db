<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <!--<th>Id</th>-->
      <th>Name</th>
      <th>Image</th>
      <th>Category</th>
      <th>Rarity</th>
      <th>Value</th>
      <th>Description</th>
      <th>Release date</th>
      <th>Retirement date</th>
      <th>Freezable</th>
      <th>Openable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <!--<td><#%= item.item_id %></td>-->
        <td><%= item.name %></td>
        <td><%= image_tag item.image_url %></td>
        <td><%= item.category %></td>
        <td><%= check_rarity(item) %></td>
        <td><%= item.value %></td>
        <td><%= item.description %></td>
        <td><%= item.release_date == nil ? item.release_date : item.release_date.to_formatted_s(:long) %></td>
        <td><%= check_retirement_date(item) %></td>
        <td><%= item.freezable == true ? "Yes" : "No" %></td>
        <td><%= item.openable == true ? "Yes" : "No" %></td>
        <!--<td><#%= link_to 'Show', item %></td>-->
        <td><%= show(item) %></td>
        <!--<td><#%= link_to 'Show', show_item_path(item.name) %></td>-->
        <td><%= link_to 'Edit', edit_item_path(item) if current_user %></td>
        <!--<td><#%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Image url</th>
      <th>Category</th>
      <th>Rarity</th>
      <th>Value</th>
      <th>Description</th>
      <th>Release date</th>
      <th>Retirement date</th>
      <th>Actual price</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_id %></td>
        <td><%= item.name %></td>
        <td><%= image_tag item.image_url %></td>
        <td><%= item.category %></td>
        <td><%= check_rarity(item) %></td>
        <td><%= item.value %></td>
        <td><%= item.description %></td>
        <td><%= item.release_date %></td>
        <td><%= check_retirement_date(item) %></td>
        <td><%= item.actual_price %></td>
        <td><%= item.notes %></td>
        <!--<td><#%= link_to 'Show', item %></td>-->
        <td><%= show(item) %></td>
        <!--<td><#%= link_to 'Show', show_item_path(item.name) %></td>-->
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <!--<td><#%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

